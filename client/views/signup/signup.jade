div(ng-controller="SignupCtrl")
    div(flex layout="row" layout-align="center" style="margin-top: 3%")
        div(flex="30" layout="column")
            div(layout="column")
                md-input-container
                    label Username
                    md-icon(class="md-primary fa fa-user")
                    input(type="text" ng-model="username")
                md-input-container
                    label Password
                    md-icon(class="md-primary fa fa-lock")
                    input(type="password" ng-model="password")
                md-input-container
                    label CellPhone
                    md-icon(class="md-primary fa fa-phone")
                    input(type="text" ng-model="cellphone")
                md-button(ng-if="!logging" class="md-primary" ng-click="goApp('home')") 註冊

